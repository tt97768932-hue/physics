function calcEM() {
    const Eval = parseFloat(document.getElementById("E").value);
    const Fval = parseFloat(document.getElementById("F").value);
    const qval = parseFloat(document.getElementById("q").value);
    const out = document.getElementById("em-result");

    let E = isNaN(Eval) ? null : Eval;
    let F = isNaN(Fval) ? null : Fval;
    let q = isNaN(qval) ? null : qval;

    let result = "";

    // 1) E = F / q
    if (E === null && F !== null && q !== null && q !== 0) {
        result = `E = ${(F/q).toFixed(3)} N/C`;
    }
    // 2) F = E * q
    else if (F === null && E !== null && q !== null) {
        result = `F = ${(E*q).toFixed(3)} N`;
    }
    // 3) q = F / E
    else if (q === null && F !== null && E !== null && E !== 0) {
        result = `q = ${(F/E).toFixed(3)} C`;
    }
    else {
        result = "2 утга оруулна уу!";
    }

    out.innerHTML = result;
}
