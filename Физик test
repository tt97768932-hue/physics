<div class="title" onclick="toggleDiffraction()">Долгионы Дифракц (d sinθ = m λ)</div>

<div id="diffractionPanel" class="panel">

    <div class="line"><b>Долгионы Дифракц:</b> Дифракцын тороор гэрэл өнгөрөх үед.</div>
    <div class="line">Томьёо: d · sin(θ) = m · λ</div>
    <div class="line">d — Торын зай (м)</div>
    <div class="line">θ — Дифракцын өнцөг (градус)</div>
    <div class="line">m — Эрэмбийн тоо (Бүхэл)</div>
    <div class="line">λ — Долгионы урт (м)</div>

    <div class="line" style="margin-top:20px;"><b>Дифракцын калькулятор</b></div>

    <div class="line calc">
        <input id="d_val" type="number" step="any" placeholder="d (м)">
        <input id="theta_val" type="number" step="any" placeholder="θ (°)">
        <input id="m_val" type="number" step="1" placeholder="m">
        <input id="lambda_val" type="number" step="any" placeholder="λ (м)">
        <button class="btn" onclick="calcDiffraction()">Бодох</button>
    </div>

    <div class="line result" id="diffraction-result">Дөрвөн утгаас гурвыг нь оруулна уу.</div>
</div>


<script>
function toggleDiffraction() {
    const panel = document.getElementById("diffractionPanel");
    panel.classList.toggle("open");
    const lines = panel.querySelectorAll(".line");

    if (panel.classList.contains("open")) {
        lines.forEach((line, i) => {
            setTimeout(() => line.classList.add("show"), i * 120);
        });
    } else {
        lines.forEach(line => line.classList.remove("show"));
    }
}




function calcDiffraction() {
    const d = parseFloat(document.getElementById("d_val").value);
    const theta_deg = parseFloat(document.getElementById("theta_val").value);
    const m = parseFloat(document.getElementById("m_val").value);
    const lambda = parseFloat(document.getElementById("lambda_val").value);
    const out = document.getElementById("diffraction-result");

    const isNaNd = isNaN(d);
    const isNaNtheta = isNaN(theta_deg);
    const isNaNm = isNaN(m);
    const isNaNlambda = isNaN(lambda);

    const nullCount = [isNaNd, isNaNtheta, isNaNm, isNaNlambda].filter(v => v).length;

    if (nullCount !== 1) {
        out.innerHTML = "Дөрвөн утгаас яг ГУРВЫГ нь оруулна уу!";
        return;
    }

    const PI = Math.PI;
    let result = "";

    if (isNaNlambda) {
        const theta_rad = theta_deg * (PI / 180);
        const λ = (d * Math.sin(theta_rad)) / m;
        result = `λ = ${λ.toExponential(4)} м`;
    } 
    else if (isNaNd) {
        const theta_rad = theta_deg * (PI / 180);
        const d_val = (m * lambda) / Math.sin(theta_rad);
        result = `d = ${d_val.toExponential(4)} м`;
    } 
    else if (isNaNtheta) {
        const ratio = (m * lambda) / d;
        if (ratio > 1 || ratio < -1) {
            result = "Өгөгдөл буруу (sinθ боломжгүй)";
        } else {
            const θ = Math.asin(ratio) * (180 / PI);
            result = `θ = ${θ.toFixed(4)} градус`;
        }
    } 
    else if (isNaNm) {
        const θ = theta_deg * (PI / 180);
        const m_val = (d * Math.sin(θ)) / lambda;
        result = `m = ${m_val.toFixed(4)}`;
    }

    out.innerHTML = result;
}
</script>

</script>

