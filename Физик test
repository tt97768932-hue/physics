<div class="title" onclick="togglePanel()"> Хурдны Томьёо (v, s, t)</div>

<!-- ------------------- ПАНЕЛ ------------------- -->
<div id="speedPanel" class="panel">

    <h3>v = s / t томьёоны 3 талт калькулятор</h3>
    <p>Доорх 3 утгаас 2-г оруул. Үлдсэнийг автоматаар бодно.</p>

    <div class="calc">
        <input id="v" type="number" step="any" placeholder="Хурд v" />
        <input id="s" type="number" step="any" placeholder="Зай s" />
        <input id="t" type="number" step="any" placeholder="Цаг t" />

        <select id="unit">
            <option value="mps">m/s</option>
            <option value="kmph">km/h</option>
        </select>

        <button class="btn" onclick="calcSpeed()">Бодох</button>
    </div>

    <div class="result" id="speed-result">Энд v, s, t–ийн нэг нь гарна.</div>
</div>

<script>
/* Гарчиг дээр дарахад панел урагш урсаж гарч ирэх */
function togglePanel() {
    const panel = document.getElementById("speedPanel");
    panel.classList.toggle("open");
}

/* Хурдны (v = s/t) 3 талт калькулятор */
function calcSpeed() {
    const v = parseFloat(document.getElementById('v').value);
    const s = parseFloat(document.getElementById('s').value);
    const t = parseFloat(document.getElementById('t').value);
    const unit = document.getElementById('unit').value;
    const out = document.getElementById('speed-result');

    let V = isNaN(v) ? null : v;
    let S = isNaN(s) ? null : s;
    let T = isNaN(t) ? null : t;

    let msg = [];

    // Хурд олох (v = s/t)
    if (V === null && S !== null && T !== null && T > 0) {
        let calc = S / T;
        msg.push("→ Хурд v = " + calc.toFixed(3) + " " + (unit === "kmph" ? "km/h" : "m/s"));
    }

    // Зай олох (s = v * t)
    if (S === null && V !== null && T !== null) {
        let calc = V * T;
        msg.push("→ Зай s = " + calc.toFixed(3));
    }

    // Цаг олох (t = s / v)
    if (T === null && S !== null && V !== null && V > 0) {
        let calc = S / V;
        msg.push("→ Цаг t = " + calc.toFixed(3));
    }

    if (msg.length === 0) {
        out.innerHTML = "v, s, t – 3-аас 2-г оруул!";
    } else {
        out.innerHTML = msg.join("<br>");
    }
}
</script>

