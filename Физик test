<div id="lightPanel" class="panel">

    <div class="line"><b>Гэрлийн ойлт:</b> Фотон нэгжийн энерги нь давтамжтай шууд хамааралтай.</div>
    <div class="line">Томьёо: E = h · f</div>
    <div class="line">E — Фотоны энерги (жоули, J)</div>
    <div class="line">h — Планкын тогтмол (6.626×10⁻³⁴ J·s)</div>
    <div class="line">f — Давтамж (Hz)</div>

    <div class="line" style="margin-top:20px;"><b>Гэрлийн ойлтын калькулятор</b></div>

    <div class="line calc">
        <input id="E" type="number" step="any" placeholder="E (J)" />
        <input id="h" type="number" step="any" placeholder="h (J·s)" value="6.626e-34" />
        <input id="f" type="number" step="any" placeholder="f (Hz)" />

        <button class="btn" onclick="calcLight()">Бодох</button>
    </div>

    <div class="line result" id="light-result">Энд E, h, f–ийн нэг нь автоматаар гарна.</div>
</div>

<script>
function toggleLight() {
    const panel = document.getElementById("lightPanel");
    panel.classList.toggle("open");

    const lines = panel.querySelectorAll(".line");

    if (panel.classList.contains("open")) {
        lines.forEach((line, idx) => {
            setTimeout(() => line.classList.add("show"), idx * 120);
        });
    } else {
        lines.forEach(line => line.classList.remove("show"));
    }
}

function calcLight() {
    const Eval = parseFloat(document.getElementById("E").value);
    const hval = parseFloat(document.getElementById("h").value);
    const fval = parseFloat(document.getElementById("f").value);
    const out = document.getElementById("light-result");

    let E = isNaN(Eval) ? null : Eval;
    let h = isNaN(hval) ? 6.626e-34 : hval;
    let f = isNaN(fval) ? null : fval;

    let result = "";

    // 1) E = h * f
    if (E === null && h !== null && f !== null) {
        result = `E = ${(h*f).toExponential(3)} J`;
    }
    // 2) f = E / h
    else if (f === null && E !== null && h !== null && h !== 0) {
        result = `f = ${(E / h).toExponential(3)} Hz`;
    }
    // 3) h = E / f
    else if (h === null && E !== null && f !== null && f !== 0) {
        result = `h = ${(E / f).toExponential(3)} J·s`;
    }
    else {
        result = "2 утга оруулна уу!";
    }

    out.innerHTML = result;
}
</script>

