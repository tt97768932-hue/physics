<script>
function toggleAC() {
    const panel = document.getElementById("acPanel");
    panel.classList.toggle("open");

    const lines = panel.querySelectorAll(".line");

    if (panel.classList.contains("open")) {
        lines.forEach((line, idx) => {
            setTimeout(() => line.classList.add("show"), idx * 120);
        });
    } else {
        lines.forEach(line => line.classList.remove("show"));
    }
}

function calcAC() {
    const Vval = parseFloat(document.getElementById("V").value);
    const Ival = parseFloat(document.getElementById("I").value);
    const Rval = parseFloat(document.getElementById("R").value);
    const out = document.getElementById("ac-result");

    let V = isNaN(Vval) ? null : Vval;
    let I = isNaN(Ival) ? null : Ival;
    let R = isNaN(Rval) ? null : Rval;

    let result = "";

    // 1) V = I * R
    if (V === null && I !== null && R !== null) {
        result = `V = ${(I*R).toFixed(3)} В`;
    }
    // 2) I = V / R
    else if (I === null && V !== null && R !== null && R !== 0) {
        result = `I = ${(V/R).toFixed(3)} А`;
    }
    // 3) R = V / I
    else if (R === null && V !== null && I !== null && I !== 0) {
        result = `R = ${(V/I).toFixed(3)} Ом`;
    }
    else {
        result = "2 утга оруулна уу!";
    }

    out.innerHTML = result;
}
</script>

