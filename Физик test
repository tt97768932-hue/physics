<script>
function toggleCap() {
    const panel = document.getElementById("capPanel");
    panel.classList.toggle("open");

    const lines = panel.querySelectorAll(".line");

    if (panel.classList.contains("open")) {
        lines.forEach((line, idx) => {
            setTimeout(() => line.classList.add("show"), idx * 120);
        });
    } else {
        lines.forEach(line => line.classList.remove("show"));
    }
}

function calcCap() {
    const CeqVal = parseFloat(document.getElementById("Ceq").value);
    const C1Val = parseFloat(document.getElementById("C1").value);
    const C2Val = parseFloat(document.getElementById("C2").value);
    const out = document.getElementById("cap-result");

    let Ceq = isNaN(CeqVal) ? null : CeqVal;
    let C1 = isNaN(C1Val) ? null : C1Val;
    let C2 = isNaN(C2Val) ? null : C2Val;

    let result = "";

    // 1) Ceq = C1 + C2
    if (Ceq === null && C1 !== null && C2 !== null) {
        result = `C_eq = ${(C1+C2).toFixed(6)} F`;
    }
    // 2) C1 = Ceq - C2
    else if (C1 === null && Ceq !== null && C2 !== null) {
        result = `C1 = ${(Ceq-C2).toFixed(6)} F`;
    }
    // 3) C2 = Ceq - C1
    else if (C2 === null && Ceq !== null && C1 !== null) {
        result = `C2 = ${(Ceq-C1).toFixed(6)} F`;
    } 
    else {
        result = "2 утга оруулна уу!";
    }

    out.innerHTML = result;
}
</script>

