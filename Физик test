<!-- ------------------- ГАРЧИГ ------------------- -->
<div class="title" onclick="toggleForce()"> Хүчний хууль (F = m · a)</div>

<!-- ------------------- ПАНЕЛ ------------------- -->
<div id="forcePanel" class="panel">

    <div class="line"> <b>Хүчний хуультай танилц</b></div>
    <div class="line"> Биеийн масс ба хурдны өөрчлөлтөөс хүчийг тодорхойлдог.</div>

    <div class="line"> <b>Томьёо:</b> F = m · a</div>
    <div class="line"> F — Хүч (ньютон, N)</div>
    <div class="line"> m — Масс (кг)</div>
    <div class="line"> a — Хурдны өөрчлөлт (m/s²)</div>

    <div class="line" style="margin-top:20px;"><b> Хүчний калькулятор</b></div>

    <div class="line calc">
        <input id="F" type="number" step="any" placeholder="F (хүч)" />
        <input id="m" type="number" step="any" placeholder="m (масс)" />
        <input id="a" type="number" step="any" placeholder="a (хурдны өөрчлөлт)" />

        <button class="btn" onclick="calcForce()">Бодох</button>
    </div>

    <div class="line result" id="force-result">Энд F, m, a–ийн нэг нь автоматаар гарна.</div>
</div>

<script>
function toggleForce() {
    const panel = document.getElementById("forcePanel");
    panel.classList.toggle("open");

    const lines = panel.querySelectorAll(".line");

    if (panel.classList.contains("open")) {
        lines.forEach((line, idx) => {
            setTimeout(() => line.classList.add("show"), idx * 120);
        });
    } else {
        lines.forEach(line => line.classList.remove("show"));
    }
}

function calcForce() {
    const Fval = parseFloat(document.getElementById("F").value);
    const mval = parseFloat(document.getElementById("m").value);
    const aval = parseFloat(document.getElementById("a").value);
    const out = document.getElementById("force-result");

    let F = isNaN(Fval) ? null : Fval;
    let m = isNaN(mval) ? null : mval;
    let a = isNaN(aval) ? null : aval;

    let result = "";

    // 1) F = m * a
    if (F === null && m !== null && a !== null) {
        result = `→ Хүч F = ${ (m * a).toFixed(3) } N`;
    }
    // 2) m = F / a
    else if (m === null && F !== null && a !== null && a !== 0) {
        result = `→ Масс m = ${ (F / a).toFixed(3) } кг`;
    }
    // 3) a = F / m
    else if (a === null && F !== null && m !== null && m !== 0) {
        result = `→ Хурдны өөрчлөлт a = ${ (F / m).toFixed(3) } m/s²`;
    }
    else {
        result = "⚠ 3 утгаас 2-г нь бөглөнө үү!";
    }

    out.innerHTML = result;
}
</script>

